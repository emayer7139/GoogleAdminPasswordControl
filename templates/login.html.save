{% extends "base.html" %}

{% block title %}Login - ResetApp{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <img src="{{ url_for('static', filename='img/logo.png') }}" alt="ResetApp Logo" class="mb-3" style="height: 100px;">
                    <h1 class="h4 mb-3">Sign In</h1>
                    <p class="text-muted mb-3">Please sign in with your Hart County Google account</p>
                    <a href="{{ url_for('login_google') }}" class="btn btn-primary d-flex align-items-center justify-content-center gap-2" style="max-width: 260px; margin: 0 auto; font-size: 1rem; padding: 0.5rem 1rem;">
                        <i class="bi bi-google" style="font-size: 1.25rem;"></i>
                        <span>Sign in with Google</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

